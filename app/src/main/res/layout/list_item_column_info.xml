<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTintMode="@android:color/darker_gray"
    android:background="@drawable/column_background"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/primaryKeyImg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/columnNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_key_gold_24dp" />

    <TextView
        android:id="@+id/columnNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Column Name"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/columnTypeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/columnTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Column Type"
        android:maxLines="1"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleLine" />
</androidx.constraintlayout.widget.ConstraintLayout>
