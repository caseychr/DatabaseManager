<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:elevation="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/primaryKeyImg"
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/columnNameTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_key_gold_24dp" />

        <TextView
            android:id="@+id/columnNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Column Name"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/columnTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Column Type"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/columnNameTextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/valueRecyclerView"
            android:layout_width="0dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/columnTypeTextView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>