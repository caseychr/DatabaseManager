<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/darker_gray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/primaryKeyImg"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/columnNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_key_gold_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleLine"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/columnNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Column Name"
        android:background="@drawable/value_background"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/middleLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/columnTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Column Type"
        android:background="@drawable/value_background"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleLine" />
</androidx.constraintlayout.widget.ConstraintLayout>